extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Descrição
                        th Data de Registo
                        th Data de Conclusão
                        th Tipo de Tarefa
                        th
                    each tr in lista
                        tr
                            td= tr.desc
                            td= tr.registo
                            td= tr.conclusao
                            td= tr.tipo