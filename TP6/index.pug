extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Descrição
                        th Data de Registo
                        th Data de Conclusão
                        th Tipo de Tarefa
                        th Estado
                        th Atualizar
                    each tr in lista
                        tr
                            td= tr.desc
                            td= tr.registo
                            td= tr.conclusao
                            td= tr.tipo
                            td.w3-green
                                label Concluída 
                                input.w3-input(type='checkbox' value='concluida')
                            td
                                button.w3-btn.w3-blue-grey(action='/processaForm' method='POST') Atualizar

                ul.w3-ul
                    li
                        a(href='/registo') Registar uma tarefa
                                                                                                                                                                 
            footer.w3-container.w3-teal
                address PG38938