extends layout

block corpo
    .w3-card-4
        header.w3-container.w3-light-grey
            h1= obras.titulo
        .w3-container
            table.w3-table.w3-bordered
                tr
                    th Tipo
                    td= obras.tipo
                tr
                    th Compositor
                    td= obras.compositor
                if obras.arranjo
                        th Arranjo
                        td= obras.arranjo
                if obras.instrumentos
                    tr
                        th Instrumentos
                        td
                            table
                                tr
                                    th Nome
                                    th Voz
                                    th Partitura   
                                tr
                                    td  
                                        ul.w3-ul
                                            each n in obras.instrumentos
                                                li= n.nome 
                                    td
                                        ul.w3-ul
                                            each v in obras.instrumentos
                                                if v.partitura.voz
                                                    li= v.partitura.voz
                                    td
                                        ul.w3-ul    
                                            each p in obras.instrumentos
                                                li 
                                                    a(href= p.partitura.path)= p.partitura.path

                                
        footer.w3-container.w3-grey.w3-center.w3-text-white
            address PG38938 
            a(href='http://localhost:5001') Voltar à página principal
